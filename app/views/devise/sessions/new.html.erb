<h2><%= t(".sign_in") %></h2>
<%= render "devise/shared/omniauths" %>
<%= simple_form_for resource, as: resource_name, url: session_path(resource_name), wrapper: :login_vertical_form do |f| %>
    <%= f.error_notification %>
    <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email" } %>
    <%= f.input :password,
                required: false,
                input_html: { autocomplete: "current-password" } %>

  <div class="d-flex flex-wrap align-items-center">
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    <%= f.button :submit, t(".sign_in"), class: 'btn btn-primary ms-auto text-wrap' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
