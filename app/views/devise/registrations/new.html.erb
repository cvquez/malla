<h2><%= t(".sign_up") %></h2>
<%= render "devise/shared/omniauths" %>
<%= simple_form_for resource, as: resource_name, url: registration_path(resource_name), wrapper: :login_vertical_form do |f| %>
  <%= f.error_notification %>
  <%= f.input :name,
              required: true, autofocus: true,
              input_html: { autocomplete: "username" } %>
  <%= f.input :email,
              input_html: { autocomplete: "email" } %>
  <%= f.input :password,
              required: true,
              hint: (t('devise.shared.minimum_password_length', count: @minimum_password_length) if @minimum_password_length),
              input_html: { autocomplete: "new-password" } %>
  <%= f.input :password_confirmation,
              required: true,
              input_html: { autocomplete: "new-password" } %>
  <div class="d-flex flex-wrap align-items-center">
    <%= f.button :submit, t(".sign_up"), class: 'btn btn-primary ms-auto text-wrap' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
